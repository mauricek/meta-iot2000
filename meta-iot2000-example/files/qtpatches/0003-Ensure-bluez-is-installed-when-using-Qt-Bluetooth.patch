@@ -14,6 +14,8 @@ DEPENDS += "qtbase qtdeclarative"
 
 inherit bluetooth
 
+REQUIRED_DISTRO_FEATURES = "bluez"
+
 PACKAGECONFIG ??= "${@bb.utils.contains('DISTRO_FEATURES', 'bluetooth', 'bluez', '', d)}"
 PACKAGECONFIG[bluez] = "-feature-bluez,-no-feature-bluez,${BLUEZ}"
 
